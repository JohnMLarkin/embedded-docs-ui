<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item logo" title="Embedded University" href=""><img src="{{{uiRootPath}}}/img/embedded-university-logo.svg" alt="Embedded University" width="48"></a>
      <a class="navbar-item title" href="{{#with (and site.url site.homeUrl)}}{{{@root.site.url}}}{{{this}}}{{else}}{{{siteRootPath}}}{{/with}}">{{site.title}}</a>
      <button class="navbar-burger" aria-controls="topbar-nav" aria-expanded="false" aria-label="Toggle main menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        {{#if env.ALGOLIA_API_KEY}}
        <div class="navbar-item search hide-for-print">
          {{#if (and page.component (ne page.component.name 'home') (ne page.component.name 'ROOT'))}}
          <div id="search" class="field has-filter">
            <input class="query" type="text" placeholder="Search the docs">
            <label class="filter checkbox">
              <input type="checkbox" data-facet-filter="component:{{page.component.name}}"> In this project
            </label>
          </div>
          {{else}}
          <div id="search" class="field">
            <input class="query" type="text" placeholder="Search the docs"{{#if page.home}} autofocus{{/if}}>
          </div>
          {{/if}}
        </div>
        {{/if}}
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">Resources</div>
          <div class="navbar-dropdown">
            <a class="navbar-item" href="{{{relativize (resolvePageURL 'lab-guides::index.adoc')}}}">EN 173 Lab Guides</a>
          </div>
        </div>
        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-item" href="{{{relativize (resolvePageURL 'about::support.adoc')}}}" data-title="Support">
            <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-24.svg#view-comment-discussion"></span>
          </a>
          <div class="navbar-dropdown is-right">
            <a class="navbar-item has-icon" href="" target="_blank" rel="noopener">
              <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-16.svg#view-comment-discussion"></span>
              <span>Chat</span>
            </a>
            <!--
            <a class="navbar-item has-icon" href="https://discuss.asciidoctor.org" target="_blank" rel="noopener">
              <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-16.svg#view-mail"></span>
              <span>List</span>
            </a>
            -->
            <a class="navbar-item has-icon" href="{{page.origin.url}}" target="_blank" rel="noopener">
              <span class="icon"><img src="{{{uiRootPath}}}/img/octicons-16.svg#view-mark-github"></span>
              <span>Source</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
